<style>
  .navbar {
     background: linear-gradient(135deg, #0a2a4d, #1f3b5c);
  color: white;
  padding: 40px 20px;
  text-align: center;
  }

  .navbar-brand a {
    color: white;
    text-decoration: none;
    font-size: 2rem;
    font-weight: bold;
  }

  .navbar-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.5rem; /* Espacio entre elementos */
  }

  .navbar-menu li a {
    color: white;
    text-decoration: none;
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }

  .navbar-menu li a:hover {
    color: #00bcd4; /* Color al pasar el mouse */
  }

  .navbar-toggle {
    display: none; /* Oculto por defecto en desktop, visible en móviles */
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .navbar-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background-color: white;
    margin-bottom: 5px;
  }

  /* Media Queries para Responsive */
  @media (max-width: 768px) {
    .navbar-menu {
      display: none; /* Oculta el menú en pantallas pequeñas por defecto */
      flex-direction: column;
      position: absolute;
      top: 60px; /* Ajusta según la altura de tu navbar */
      left: 0;
      width: 100%;
      background-color: #2e3999;
      padding: 1rem 0;
      text-align: center;
    }

    .navbar-menu.open {
      display: flex; /* Muestra el menú cuando esté "abierto" */
    }

    .navbar-menu ul {
      flex-direction: column;
      gap: 1rem;
    }

    .navbar-toggle {
      display: block; /* Muestra el botón de toggle en móviles */
    }
  }
</style>

<script>
  // Script para el toggle del menú en dispositivos móviles
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.querySelector('.navbar-toggle');
    const navbarMenu = document.querySelector('.navbar-menu');

    if (toggleButton && navbarMenu) {
      toggleButton.addEventListener('click', () => {
        navbarMenu.classList.toggle('open');
      });
    }
  });
</script>