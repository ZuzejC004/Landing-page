 <style>
  body{
    background-color: rgb(228, 228, 255);
  }
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 3rem;
    background-color: #0a2a4d;
    box-shadow: 0 2px 4px rgb(255, 255, 255);
    position: relative;
    z-index: 10;
  }

  .navbar-brand .logo-link {
    font-size: 1.8rem;
    font-weight: bold;
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s ease-in-out;
  }

  .navbar-brand .logo-link:hover {
    color: #007bff;
  }

  .navbar-menu {
    display: flex;
    align-items: center;
    
  }

  .nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    text-decoration: none;
    color: #ffffff;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: color 0.3s ease-in-out;
  }

  .nav-link::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 2px;
    background-color: #007bff;
    transition: width 0.3s ease-in-out;
  }

  .nav-link:hover {
    color: #007bff;
  }

  .nav-link:hover::before {
    width: 100%;
  }

  .navbar-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: none;
    padding: 0;
  }

  .hamburger {
    width: 30px;
    height: 22px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger span {
    display: block;
    height: 3px;
    width: 100%;
    background-color: #333;
    border-radius: 10px;
    transition: all 0.3s ease-in-out;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: -100%;
    width: 80%;
    height: 100vh;
    background-color: #333;
    color: white;
    transition: left 0.3s ease-in-out;
    padding-top: 4rem;
    z-index: 9;
  }

  .mobile-menu.open {
    left: 0;
  }

  .mobile-nav-links {
    list-style: none;
    padding: 0 2rem;
  }

  .mobile-nav-link {
    display: block;
    padding: 1rem 0;
    text-decoration: none;
    color: white;
    font-size: 1.2rem;
    border-bottom: 1px solid #555;
    transition: color 0.3s ease-in-out, padding-left 0.3s ease-in-out;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  .mobile-nav-link:hover {
    color: #007bff;
    padding-left: 1rem;
  }
  .slider {
  position: relative;
  max-width: 100%;
  height: 300px;
  overflow: hidden;
}

.slide {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 1s ease-in-out;
  object-fit: cover;
}

.slide.active {
  opacity: 1;
}

  /* Media query for mobile devices */
  @media (max-width: 768px) {
    .navbar-menu {
      display: none;
    }
    .navbar-toggle {
      display: block;
    }
  }
 </style>

 <script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.querySelector('.navbar-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');
    const hamburger = document.querySelector('.hamburger');

    if (toggleButton && mobileMenu) {
      toggleButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('open');
        
      });
    }
  });

  let index = 0;
const slides = document.querySelectorAll(".slide");
function showSlide() {
  slides.forEach(slide => slide.classList.remove("active"));
  slides[index].classList.add("active");
  index = (index + 1) % slides.length;
}
  setInterval(showSlide, 4000); // Cambia cada 4 segundos
 </script>